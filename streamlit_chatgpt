import streamlit as st

st.set_page_config(page_title="Quiz App", layout="centered")

st.title("🧠 General Knowledge Quiz")
st.write("Answer 5 questions and check your score!")

# Questions + options + correct answers
questions = [
    {
        "question": "1) What is the capital of France?",
        "options": ["Berlin", "Madrid", "Paris", "Rome"],
        "answer": "Paris"
    },
    {
        "question": "2) Who wrote the play 'Hamlet'?",
        "options": ["William Wordsworth", "William Shakespeare", "Leo Tolstoy", "Mark Twain"],
        "answer": "William Shakespeare"
    },
    {
        "question": "3) Which planet is known as the Red Planet?",
        "options": ["Venus", "Mars", "Jupiter", "Mercury"],
        "answer": "Mars"
    },
    {
        "question": "4) What is the largest mammal in the world?",
        "options": ["Elephant", "Blue Whale", "Giraffe", "Hippopotamus"],
        "answer": "Blue Whale"
    },
    {
        "question": "5) In which year did India gain independence?",
        "options": ["1945", "1947", "1950", "1962"],
        "answer": "1947"
    }
]

score = 0
answers = {}

# Loop through questions
for q in questions:
    choice = st.radio(q["question"], q["options"], key=q["question"])
    answers[q["question"]] = choice

# Submit button
if st.button("Submit"):
    for q in questions:
        if answers[q["question"]] == q["answer"]:
            score += 1

    st.success(f"✅ You scored {score} out of {len(questions)}")

    if score == len(questions):
        st.balloons()
        st.write("🎉 Excellent! Perfect Score!")
    elif score >= 3:
        st.write("👍 Good job! Keep it up.")
    else:
        st.write("😅 Better luck next time!")
